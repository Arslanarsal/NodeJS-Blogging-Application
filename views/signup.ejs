<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Sign Up</title>
</head>

<body class="bg-gray-100 font-sans">
    <%- include('./partials/navbar.ejs') %>

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white text-center">
                            <h3 class="mb-0">User Signup</h3>
                        </div>
                        <div class="card-body">
                            <form action="/user/signup" method="post" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="userName" class="form-label">Username</label>
                                    <input type="text" name="userName" id="userName" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" name="email" id="email" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" name="password" id="password" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label for="profileImgURL" class="form-label">Profile Image</label>
                                    <input type="file" name="profileImgULR" id="profileImgURL" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="role" class="form-label">Role</label>
                                    <select name="role" id="role" class="form-select">
                                        <option value="USER">USER</option>
                                        <option value="ADMIN">ADMIN</option>
                                    </select>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Sign Up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-3">
            <p class="mb-0">
                Already have an account?
                <a href="/signin" class="text-primary fw-bold">Sign In</a>
            </p>
        </div>


        <%- include('./partials/footer.ejs') %>
</body>

</html>