<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <%- include('./partials/navbar.ejs') %>

    <div class="container my-5">
        <h2 class="text-center mb-4">Latest Blogs</h2>

        <% if (blogs && blogs.length > 0) { %>
            <div class="row g-4">
                <% blogs.forEach(blog => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <img src="/images/<%= blog.coverImg %>" class="card-img-top" alt="Blog Image" style="height: 200px; object-fit: cover;">

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="card-text text-truncate"><%= blog.body %></p>
                                <a href="/blog/<%= blog._id %>" class="mt-auto btn btn-outline-primary btn-sm">Read More</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center">No blogs found.</p>
        <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>
